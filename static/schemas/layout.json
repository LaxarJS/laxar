{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "object",
   "required": [ "name" ],
   "properties": {

      "name": {
         "type": "string",
         "description": "The name of the layout."
      },

      "templateSource": {
         "type": "string",
         "description": "The location of the layout's HTML template."
      },
      "styleSource": {
         "type": "string",
         "description": "The location of the layout's stylesheet."
      }

   },
   "additionalProperties": false
}
